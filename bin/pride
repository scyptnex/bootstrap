#! /usr/bin/env bash

#=========================================================================#
#                                  pride                                  #
#                                                                         #
# Author: nic                                                             #
# Date: 2017-Jun-22                                                       #
#=========================================================================#

set -e
set -u

BCOLOURS=(196 208 226  28  21  92)
FCOLOURS=(217 229 100  85 147 147)

function usage(){
    grep "^#.*#$" $0
}

function errxit(){
    [ $# -gt 0 ] && echo "Error: $@" >&2
    echo "Re-run with -h for help" >&2
    exit 1
}

function prideify(){
    #TODO work out the setaf codes in advance
    NCOLOURS=${#BCOLOURS[*]}
    AMT=`sed 's/\t/    /g' | tee "$1" | wc -l`
    WIDEST=`awk 'BEGIN{max=0}{if(length>max){max=length}}END{print max}' "$1"`
    LN=0
    RSET=$(tput sgr0)
    while IFS= read LINE; do
        IDX=$(( (LN*NCOLOURS) / AMT))
        BG=$(tput setab ${BCOLOURS[$IDX]})
        FG=$(tput setaf ${FCOLOURS[$IDX]})
        printf "%s%-${WIDEST}s%s\n" "$BG$FG" "$LINE" "$RSET"
        LN=$((LN + 1))
    done < "$1"
}

while getopts "fh" opt; do
    case $opt in
        f)
            FCOLOURS=("${BCOLOURS[@]}")
            BCOLOURS=(0 0 0 0 0 0)
            ;;
        h)
            usage
            exit 0
            ;;
        \?)
            errxit Unrecognised command
            ;;
    esac
done
shift $(($OPTIND - 1))

FI=`mktemp`
trap "rm $FI" EXIT

if [ $# == 0 ]; then
    echo
    echo -n "......" | sed 's/./                    \n/g' | prideify "$FI"
else
    cat "$1" | prideify "$FI"
fi

