#! /usr/bin/env bash

#-------------------------------------------------------------------------#
#                                repowatch                                #
#                                                                         #
# Author: Nic H.                                                          #
# Date: 2016-Mar-29                                                       #
#                                                                         #
# Keep track of multiple repositories, based on a subscription model,     #
# where the user elects to track groups or individual repositories.       #
#-------------------------------------------------------------------------#

function usage(){
    grep "^#.*#$" $0
}

while getopts "h" opt; do
    case $opt in
        h)
            usage
            exit 0
            ;;
        \?)
            usage
            exit 1
            ;;
    esac
done
shift $(($OPTIND -1))

echo $@
